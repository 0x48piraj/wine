DEFS      = -DWINELIB
TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = none
PROGRAMS  = clock
ALL_LIBS  = $(WINELIB) $(X_LIBS) $(XLIB) $(LIBS)
WRCEXTRA  = -s -p clock

LICENSELANG = En

C_SRCS = \
	language.c \
	license.c \
	winclock.c \
	main.c \
	$(LICENSELANG:%=License_%.c)

SPEC_SRCS = clock.spec

RC_SRCS = rsrc.rc

all: check_wrc check_winestub $(PROGRAMS)

@MAKE_RULES@

# Override resource compiler rules
.rc.s:
	$(CPP) $(DEFS) $(OPTIONS) $(DIVINCL) -DRC_INVOKED -P -x c $< | $(WRC) $(WRCFLAGS) $(WRCEXTRA) -o $*.s


clock: $(OBJS)
	$(CC) -o clock $(OBJS) $(LDOPTIONS) $(ALL_LIBS)

install::
	$(INSTALL_PROGRAM) clock $(bindir)/clock

uninstall::
	$(RM) $(bindir)/clock

