DEFS      = -DWINELIB -DSTRICT
TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = none
PROGRAMS  = clock
IMPORTS   = advapi32 comctl32 shlwapi shell32 comdlg32 ole32 rpcrt4 winspool.drv user32 gdi32 kernel32
WRCEXTRA  = -s -p clock

LICENSELANG = En

C_SRCS = \
	language.c \
	license.c \
	winclock.c \
	main.c \
	$(LICENSELANG:%=License_%.c)

SPEC_SRCS = clock.spec

RC_SRCS = rsrc.rc

all: check_wrc $(PROGRAMS)

@MAKE_RULES@


clock: $(OBJS)
	$(CC) -o clock $(OBJS) $(DLL_LINK) $(LIBS)

install::
	$(INSTALL_PROGRAM) clock $(bindir)/clock

uninstall::
	$(RM) $(bindir)/clock

### Dependencies:
