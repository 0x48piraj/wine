DEFS      = -DWINELIB -DSTRICT
TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = none
PROGRAMS  = wcmd
IMPORTS   = user32 kernel32
WRCEXTRA  = -s -p wcmd

C_SRCS = \
	batch.c \
	builtins.c \
	directory.c \
	wcmdmain.c

SPEC_SRCS = \
	wcmd.spec

RC_SRCS = \
	wcmdrc.rc

all: check_wrc $(PROGRAMS)

@MAKE_RULES@

wcmd: $(OBJS)
	$(CC) -o wcmd $(OBJS) $(DLL_LINK) $(LIBS)

install::
	$(INSTALL_PROGRAM) wcmd $(bindir)/wcmd

uninstall::
	$(RM) $(bindir)/wcmd

### Dependencies:
