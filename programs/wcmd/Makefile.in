DEFS      = -DWINELIB -DSTRICT
TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = none
PROGRAMS  = wcmd
IMPORTS   = shell32 user32 gdi32 kernel32 ntdll

C_SRCS = \
	batch.c \
	builtins.c \
	directory.c \
	wcmdmain.c

SPEC_SRCS = \
	wcmd.spec

RC_SRCS = \
	wcmdrc.rc

all: $(PROGRAMS)

@MAKE_RULES@

$(SPEC_SRCS:.spec=.spec.c): $(RC_SRCS:.rc=.res)

wcmd: $(OBJS)
	$(CC) -o wcmd $(OBJS) $(DLL_LINK) $(LIBS)

install::
	$(INSTALL_PROGRAM) wcmd $(bindir)/wcmd

uninstall::
	$(RM) $(bindir)/wcmd

### Dependencies:
