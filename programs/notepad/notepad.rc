   MENUITEM MENU_EDIT_COPY,             NP_EDIT_COPY,    GRAYED
   MENUITEM MENU_EDIT_PASTE,            NP_EDIT_PASTE,   GRAYED
   MENUITEM MENU_EDIT_DELETE,           NP_EDIT_DELETE,  GRAYED
