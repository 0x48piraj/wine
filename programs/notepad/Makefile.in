DEFS      = -DWINELIB
TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = none
PROGRAMS  = notepad
IMPORTS   = shell32 ole32 comdlg32 winspool.drv
WRCEXTRA  = -s -p notepad

LICENSELANG = En

C_SRCS = \
	license.c \
	main.c \
	dialog.c \
	language.c \
	search.c \
	$(LICENSELANG:%=License_%.c)

SPEC_SRCS = notepad.spec

RC_SRCS = rsrc.rc

all: check_wrc $(PROGRAMS)

@MAKE_RULES@

# Override resource compiler rules
.rc.s:
	$(CPP) $(DEFS) $(OPTIONS) $(DIVINCL) -DRC_INVOKED -P -x c $< | $(WRC) $(WRCFLAGS) $(WRCEXTRA) -o $*.s

notepad: $(OBJS)
	$(CC) -o notepad $(OBJS) $(DLL_LINK) $(LIBS)

install::
	$(INSTALL_PROGRAM) notepad $(bindir)/notepad

uninstall::
	$(RM) $(bindir)/notepad

