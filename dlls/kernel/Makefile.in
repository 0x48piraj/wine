TOPSRCDIR = @top_srcdir@
TOPOBJDIR = ../..
SRCDIR    = @srcdir@
VPATH     = @srcdir@
MODULE    = kernel32.dll
ALTNAMES  = krnl386.exe comm.dll stress.dll system.dll toolhelp.dll windebug.dll win87em.dll wprocs.dll
IMPORTS   = ntdll.dll

C_SRCS = \
	comm.c \
	console.c \
	debugger.c \
	format_msg.c \
	kernel_main.c \
	stress.c \
	string.c \
	sync.c \
	thunk.c \
	time.c \
	toolhelp.c \
	utthunk.c \
	win87em.c \
	windebug.c \
	wowthunk.c

RC_SRCS = \
	kernel.rc

RC_SRCS16 = \
	version16.rc

MC_SRCS = \
	messages/winerr_enu.mc

GLUE = utthunk.c

EXTRASUBDIRS = \
	messages \
	nls \
	tests

CTESTS = \
	tests/alloc.c \
	tests/directory.c \
	tests/thread.c

PLTESTS = \
	tests/atom.pl

@MAKE_DLL_RULES@

kernel.res: $(MC_SRCS:.mc=.mc.rc)

# Special rules for 16-bit resource files

version16.res: version16.rc
	$(LDPATH) $(WRC) $(DIVINCL) -o $@ -w16 -m -r $(SRCDIR)/version16.rc

krnl386.exe.spec.c: version16.res

install:: install_libdir
uninstall:: uninstall_libdir

