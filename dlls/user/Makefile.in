IMPORTS   = gdi32.dll advapi32.dll kernel32.dll ntdll.dll
ALTNAMES  = user.exe keyboard.dll ddeml.dll display.dll mouse.dll
LDIMPORTS = gdi32.dll kernel32.dll ntdll.dll

C_SRCS = \
	bidi16.c \
	cache.c \
	comm16.c \
	dde/client.c \
	dde/ddeml16.c \
	dde/misc.c \
	dde/server.c \
