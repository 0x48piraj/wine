install:: $(FONTS) $(INSTALLDIRS)
	for i in $(FONTS); do $(INSTALL_DATA) $$i $(DESTDIR)$(fontdir)/$$i || exit 1; done

uninstall::
	-cd $(DESTDIR)$(fontdir) && $(RM) $(FONTS)
	-rmdir $(DESTDIR)$(fontdir)

clean::
	$(RM) *.fon *.ttf
