FONT_SRCS = \
	courier.sfd \
	fixedsys.sfd \
	fixedsys_jp.sfd \
	marlett.sfd \
	ms_sans_serif.sfd \
	small_fonts.sfd \
	small_fonts_jp.sfd \
	symbol.sfd \
	system.sfd \
	tahoma.sfd \
	tahomabd.sfd \
	wingding.sfd

TRUETYPE_FONTS = \
	marlett.ttf \
	symbol.ttf \
	tahoma.ttf \
	tahomabd.ttf \
	wingding.ttf

# Make sure that make_makefiles sees the generated rules
clean::

install install-lib::
	for i in $(TRUETYPE_FONTS); do $(INSTALL_DATA) $(srcdir)/$$i $(DESTDIR)$(fontdir)/$$i || exit 1; done

uninstall::
	-cd $(DESTDIR)$(fontdir) && $(RM) $(TRUETYPE_FONTS)
	-rmdir $(DESTDIR)$(fontdir)
